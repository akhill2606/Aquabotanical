{{ "shopify_common.js" | shopify_asset_url | script_tag }} 
{{ "customer_area.js"  | shopify_asset_url | script_tag }}
<script>

// Initiate provinces for the New Address form
  new Shopify.CountryProvinceSelector('AddressCountry_', 'AddressProvince_', {hideElement: 'AddressProvinceContainer_'});

// Initiate provinces for all existing addresses
  {% for address in customer.addresses %}
    new Shopify.CountryProvinceSelector('AddressCountry_{{address.id}}', 'AddressProvince_{{address.id}}', {hideElement: 'AddressProvinceContainer_{{address.id}}'});
  {% endfor %}
</script>
